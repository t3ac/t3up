lib.extras1 = COA
lib.extras1.if.isTrue               = {$page.footer.copyright} 
lib.extras1{
    10                              = TEXT
    10.data                         = U
    10.strftime                     = %Y
    10.wrap                         = |&nbsp;
    20                              = TEXT
